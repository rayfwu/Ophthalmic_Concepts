<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="75dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/borderGray"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_text_size"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/menu_margins"
        android:text="Select Patient Therapy"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/placeholder"
            android:id="@+id/cool"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:layout_toLeftOf="@+id/warm"/>

        <include layout="@layout/placeholder"
            android:id="@+id/warm"
            android:layout_marginLeft="@dimen/menu_margins"
            android:layout_marginRight="@dimen/menu_margins"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:layout_centerHorizontal="true"/>

        <include layout="@layout/placeholder"
            android:id="@+id/coolwarm"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:layout_toRightOf="@+id/warm"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/menu_margins">

        <include layout="@layout/placeholder"
            android:id="@+id/online"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:layout_toLeftOf="@+id/reorder"/>

        <include layout="@layout/placeholder"
            android:id="@+id/reorder"
            android:layout_marginLeft="@dimen/menu_margins"
            android:layout_marginRight="@dimen/menu_margins"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:layout_centerHorizontal="true"/>

        <include layout="@layout/placeholder"
            android:id="@+id/manual"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:layout_toRightOf="@+id/reorder"/>

    </RelativeLayout>



</LinearLayout>
